<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"


    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventsCardView"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventInformation_layout"
            >
            <com.kaaylabs.thendral.util.DynamicImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/person_photo"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" android:scaleType="centerCrop"
                android:src="@drawable/nerkanal_1" />
            <!-- <ImageView
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:id="@+id/person_photo"
                 android:padding="5dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:paddingTop="10dp"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:layout_alignBaseline="@id/person_photo"
                android:text=""
                android:layout_toRightOf="@+id/person_photo"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_age"
                android:textColor="#606f75"
                android:layout_margin="5dp"
                android:text=""
                android:maxLength="50"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_below="@+id/person_name"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uicontent"
                android:textColor="#606f75"
                android:layout_margin="5dp"
                android:text=""
                android:maxLength="50"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_below="@+id/person_age"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>